import random

word_list = ['banana', 'apple', 'orange', 'strawberry', 'pineapple']
word = random.choice(word_list)
empty_list = []

new_list = empty_list.append([*word])
print(new_list)

guess = input(' Guess a letter: ')

def guess_letter(guess):
    for char in word:
        if char == guess: 
            print(char,end='')
        else:
            print('',end='')

guess_letter(guess)