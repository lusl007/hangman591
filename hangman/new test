import random

word_list = ['banana', 'apple', 'orange', 'strawberry', 'pineapple']
word = random.choice(word_list)
guesses = ''
turn = 10
correct = 0
count = len(word)
print(word)
print(count)

def ask_for_input(guesses, count, turn, correct):
    while True:
        if turn == 0:
            print('game over bucko')
            break
        if correct == count:
            print(' gg :D')
            break
        else:
            correct = 0
            guess = input(' Guess a letter: ')
            guess = guess.lower()
            if len(guess) == 1 and guess.isalpha():
                if guess not in word:
                    print("sorry wrong letter")
                    turn -= 1
                    print(turn, ' remaining')
                else:
                    guesses += guess.lower()
                    for char in word:
                        if char in guesses:
                            correct += 1
                    check_guess(guesses)
            else:
                print('Invalid letter. Please, enter a single alphabetical character.')

def check_guess(guesses):
    for char in word:
        if char in guesses:
            print(char,end='')
        else:
            print('',end='')


ask_for_input(guesses, count, turn, correct)